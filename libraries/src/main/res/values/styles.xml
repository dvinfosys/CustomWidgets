<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="vp_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/vp_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="vp_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="colorPickerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">315dp</item>
    </style>

</resources>
