<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="dv_border_width" format="dimension" />
        <attr name="dv_border_color" format="color" />
        <attr name="dv_border_overlay" format="boolean" />
        <attr name="dv_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomSeekBar">
        //seekBar
        <attr name="sb_max" format="float" />
        <attr name="sb_min" format="float" />
        <attr name="sb_progress" format="float" />
        <attr name="sb_progress_value_float" format="boolean" />
        <attr name="sb_seek_smoothly" format="boolean" />
        <attr name="sb_r2l" format="boolean" />
        <attr name="sb_ticks_count" format="integer" />
        <attr name="sb_user_seekable" format="boolean" />
        <attr name="sb_clear_default_padding" format="boolean" />
        <attr name="sb_only_thumb_draggable" format="boolean" />
        //indicator
        <attr name="sb_show_indicator">
            <enum name="none" value="0" />
            <enum name="circular_bubble" value="1" />
            <enum name="rounded_rectangle" value="2" />
            <enum name="rectangle" value="3" />
            <enum name="custom" value="4" />
        </attr>
        <attr name="sb_indicator_color" format="color|reference" />
        <attr name="sb_indicator_text_color" format="color|reference" />
        <attr name="sb_indicator_text_size" format="dimension|reference" />
        <attr name="sb_indicator_content_layout" format="reference" />
        <attr name="sb_indicator_top_content_layout" format="reference" />
        //track
        <attr name="sb_track_background_size" format="dimension|reference" />
        <attr name="sb_track_background_color" format="color|reference" />
        <attr name="sb_track_progress_size" format="dimension|reference" />
        <attr name="sb_track_progress_color" format="color|reference" />
        <attr name="sb_track_rounded_corners" format="boolean" />
        //thumb text
        <attr name="sb_thumb_text_color" format="color|reference" />
        <attr name="sb_show_thumb_text" format="boolean" />
        //thumb
        <attr name="sb_thumb_size" format="dimension|reference" />
        <attr name="sb_thumb_color" format="color|reference" />
        <attr name="sb_thumb_drawable" format="reference" />
        <attr name="sb_thumb_adjust_auto" format="boolean" />
        //tickMarks
        <attr name="sb_tick_marks_color" format="color|reference" />
        <attr name="sb_tick_marks_size" format="dimension|reference" />
        <attr name="sb_tick_marks_drawable" format="reference" />
        <attr name="sb_tick_marks_ends_hide" format="boolean" />
        <attr name="sb_tick_marks_swept_hide" format="boolean" />
        <attr name="sb_show_tick_marks_type">
            <enum name="none" value="0" />
            <enum name="oval" value="1" />
            <enum name="square" value="2" />
            <enum name="divider" value="3" />
        </attr>
        //tickTexts
        <attr name="sb_show_tick_texts" format="boolean" />
        <attr name="sb_tick_texts_color" format="reference|color" />
        <attr name="sb_tick_texts_size" format="dimension|reference" />
        <attr name="sb_tick_texts_array" format="reference" />
        <attr name="sb_tick_texts_typeface">
            <enum name="normal" value="0" />
            <enum name="monospace" value="1" />
            <enum name="sans" value="2" />
            <enum name="serif" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="font_name" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="button_font" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="edittext_font" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomCheckBox">
        <attr name="checkbox_font" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="radiobutton_font" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomSwitch">
        <attr name="switch_font" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomToggleButton">
        <attr name="togglebutton_font" format="string" />
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gradientStart" format="color" />
        <attr name="gradientEnd" format="color" />
    </declare-styleable>
    <declare-styleable name="GradientBoldTextView">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />

    </declare-styleable>

    <declare-styleable name="ShaderImageView">
        <attr name="isSquare" format="boolean" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderAlpha" format="float" />
        <attr name="foreground" format="integer|reference" />
        <attr name="radius" format="dimension" />
    </declare-styleable>


    <!--ColorPicker-->
    <declare-styleable name="ColorPanelView">
        <attr name="showOldColor" format="boolean" />
        <attr name="colorShape" format="enum">
            <enum name="square" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <attr name="bordercolor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ColorPickerView" parent="ColorPanelView">
        <attr name="alphaChannelVisible" format="boolean|reference" />
        <attr name="alphaChannelText" format="string|reference" />
        <attr name="sliderColor" format="color|reference" />
        <attr name="dv_borderColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="ColorPreference" parent="ColorPickerDialog">
        <attr name="showAlphaSlider" format="boolean|reference" />
        <attr name="previewSize" format="enum">
            <enum name="regular" value="0" />
            <enum name="large" value="1" />
        </attr>
        <attr name="colorShape" />
        <attr name="dialogTitle" format="reference" />
        <attr name="colorPresets" format="reference" />
        <attr name="dialogType" format="enum">
            <enum name="custom" value="0" />
            <enum name="preset" value="1" />
        </attr>
        <attr name="showColorShades" format="boolean|reference" />
        <attr name="allowPresets" format="boolean|reference" />
        <attr name="allowCustom" format="boolean|reference" />
        <attr name="showDialog" format="boolean|reference" />
    </declare-styleable>

    <!--NumberCounter-->
    <declare-styleable name="Counter">
        <attr name="stepValue" format="string"/>
        <attr name="initialValue" format="string"/>
        <attr name="maxValue" format="string"/>
        <attr name="minValue" format="string"/>
        <attr name="plusButtonColor" format="color"/>
        <attr name="minusButtonColor" format="color"/>
        <attr name="plusIcon" format="reference" />
        <attr name="minusIcon" format="reference" />
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="displayAsInteger" format="boolean"/>
    </declare-styleable>

    <!--CountdownView-->
    <declare-styleable name="CountdownView">
        <attr name="isHideTimeBackground" format="boolean" />
        <attr name="isShowTimeBgDivisionLine" format="boolean" />
        <attr name="timeBgDivisionLineColor" format="color" />
        <attr name="timeBgDivisionLineSize" format="dimension" />
        <attr name="timeBgColor" format="color" />
        <attr name="timeBgSize" format="dimension" />
        <attr name="timeBgRadius" format="dimension" />

        <attr name="isTimeTextBold" format="boolean" />
        <attr name="timeTextSize" format="dimension" />
        <attr name="timeTextColor" format="color" />
        <attr name="isShowDay" format="boolean" />
        <attr name="isShowHour" format="boolean" />
        <attr name="isShowMinute" format="boolean" />
        <attr name="isShowSecond" format="boolean" />
        <attr name="isShowMillisecond" format="boolean" />
        <attr name="isConvertDaysToHours" format="boolean" />

        <attr name="isSuffixTextBold" format="boolean" />
        <attr name="suffixTextSize" format="dimension" />
        <attr name="suffixTextColor" format="color" />
        <attr name="suffix" format="string" />
        <attr name="suffixDay" format="string" />
        <attr name="suffixHour" format="string" />
        <attr name="suffixMinute" format="string" />
        <attr name="suffixSecond" format="string" />
        <attr name="suffixMillisecond" format="string" />
        <attr name="suffixGravity">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="suffixLRMargin" format="dimension" />
        <attr name="suffixDayLeftMargin" format="dimension" />
        <attr name="suffixDayRightMargin" format="dimension" />
        <attr name="suffixHourLeftMargin" format="dimension" />
        <attr name="suffixHourRightMargin" format="dimension" />
        <attr name="suffixMinuteLeftMargin" format="dimension" />
        <attr name="suffixMinuteRightMargin" format="dimension" />
        <attr name="suffixSecondLeftMargin" format="dimension" />
        <attr name="suffixSecondRightMargin" format="dimension" />
        <attr name="suffixMillisecondLeftMargin" format="dimension" />

        <attr name="isShowTimeBgBorder" format="boolean" />
        <attr name="timeBgBorderColor" format="color" />
        <attr name="timeBgBorderSize" format="dimension" />
        <attr name="timeBgBorderRadius" format="dimension" />
    </declare-styleable>

</resources>